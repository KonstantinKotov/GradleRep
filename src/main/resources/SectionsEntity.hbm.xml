<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.SectionsEntity" table="sections" schema="app1_db">
        <id name="sectionId" column="section_ID"/>
        <property name="sectionName" column="section_name"/>
        <property name="sectionContent" column="section_content"/>
        <property name="sectionTopicId" column="section_topic_ID" insert="false" update="false"/>
        <many-to-one name="topicsBySectionTopicId" class="entity.TopicsEntity">
            <column name="section_topic_ID"/>
        </many-to-one>
    </class>
</hibernate-mapping>